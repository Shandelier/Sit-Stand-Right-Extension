{
    "name": "Sit Stand Right",
    "description": "gentle reminder of healthy posture!",
    "version": "1.0",
    "homepage_url": "http://sitstandright.com",
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Blur the page"
    },
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "optional_permissions": [
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }
}