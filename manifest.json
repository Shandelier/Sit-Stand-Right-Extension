{
    "name": "Sit Stand Right",
    "description": "gentle reminder of healthy posture!",
    "version": "1.0",
    "homepage_url": "http://sitstandright.com",
    "browser_action": {
        "default_icon": {
            "16": "src/icons/icon16.png",
            "32": "src/icons/icon32.png",
            "48": "src/icons/icon48.png",
            "128": "src/icons/icon128.png"
        },
        "default_title": "Blur the page"
    },
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "declarativeContent",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "storage",
        "tabs"
    ],
    "background": {
        "scripts": [
            "src/background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "src/content.js"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "options_ui": {
        "page": "src/options/options.html",
        "open_in_tab": true
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "model/128/group1-shard1of1.bin",
        "model/128/model.json"
    ]
}